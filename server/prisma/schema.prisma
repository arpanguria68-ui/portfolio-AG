datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  date      DateTime @default(now())
  read      Boolean  @default(false)
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  year        String
  tags        String   // JSON string or comma-separated
  image       String
  link        String?
  createdAt   DateTime @default(now())
}

model SocialLink {
  id       Int     @id @default(autoincrement())
  platform String
  handle   String
  url      String
  icon     String
  visible  Boolean @default(true)
  color    String?
  bgColor  String?
}

model Profile {
  id            Int    @id @default(autoincrement())
  bio           String?
  headline      String?
  subHeadline   String?
  email         String?
  resumeUrl     String?
}
